<!DOCTYPE html>
html(lang="en")
head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(http-equiv="X-UA-Compatible", content="ie=edge")
  title Pomodoro Clock
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous")
  script(src="https://use.fontawesome.com/6af8722801.js")
  link(rel="stylesheet", href="style.css")
body

  h1.text-center Simple Pomodoro Clock
  .container
    .clockBG
      #clockTime 00:00
      a.start-button(href="#")
        i.fa.fa-play
        i.fa.fa-pause.hidden
      a.stop-button(href="#")
        i.fa.fa-stop
        
    hr
      
    p.text-center
      small.text-explanation.play Click on the Start button to start the timer.
      small.text-explanation.pause.hidden Click on the Pause button to pause the timer.
      br
      small Click on the Stop button to stop and reset the timer.


  script(src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous")
